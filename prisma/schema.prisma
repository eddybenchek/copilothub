generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String            @id @default(cuid())
  name          String?
  email         String?           @unique
  emailVerified DateTime?
  image         String?
  githubUsername String?          @unique
  role          Role              @default(USER)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  accounts      Account[]
  prompts       Prompt[]
  sessions      Session[]
  tools         Tool[]
  votes         Vote[]
  mcps          McpServer[]
  instructions  Instruction[]
  agents        Agent[]
  favorites     Favorite[]
  collections   Collection[]
  
  @@index([githubUsername])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Prompt {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  description String
  content     String
  tags        String[]
  difficulty  Difficulty    @default(BEGINNER)
  status      ContentStatus @default(PENDING)
  authorId    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  author      User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  votes       Vote[]

  @@index([authorId])
  @@index([slug])
  @@index([status])
  @@index([status, createdAt]) // Composite index for optimized queries
}

model Tool {
  id               String        @id @default(cuid())
  title            String
  slug             String        @unique
  description      String
  content          String
  url              String?
  tags             String[]
  difficulty       Difficulty    @default(INTERMEDIATE)
  status           ContentStatus @default(PENDING)
  authorId         String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  authorName       String?
  featured         Boolean       @default(false)
  logo             String?
  name             String?
  shortDescription String?
  websiteUrl       String?
  author           User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  votes            Vote[]

  @@index([authorId])
  @@index([slug])
  @@index([status])
  @@index([status, createdAt]) // Composite index for optimized queries
}

model Vote {
  id           String          @id @default(cuid())
  userId       String
  targetId     String
  targetType   TargetType
  value        Int
  createdAt    DateTime        @default(now())
  promptId      String?
  toolId        String?
  mcpId         String?
  instructionId String?
  agentId       String?
  prompt        Prompt?         @relation(fields: [promptId], references: [id], onDelete: Cascade)
  tool          Tool?           @relation(fields: [toolId], references: [id], onDelete: Cascade)
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  mcp           McpServer?      @relation(fields: [mcpId], references: [id], onDelete: Cascade)
  instruction   Instruction?    @relation(fields: [instructionId], references: [id], onDelete: Cascade)
  agent         Agent?          @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId, targetType])
  @@index([userId])
  @@index([targetId])
}

model McpServer {
  id               String        @id @default(cuid())
  title            String
  slug             String        @unique
  description      String
  content          String
  githubUrl        String?       // GitHub repository URL
  websiteUrl       String?       // Official website
  logo             String?       // Path to logo in /public/logos
  tags             String[]     // e.g., ["python", "cloud", "database"]
  category         String?       // e.g., "database", "api", "productivity"
  difficulty       Difficulty    @default(INTERMEDIATE)
  status           ContentStatus @default(PENDING)
  authorId         String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  authorName       String?
  featured         Boolean       @default(false)
  name             String?       // Display name
  shortDescription String?       // Brief description for cards
  installCommand   String?       // Command to install the MCP server
  configExample    String?       // Example configuration JSON
  author           User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  votes            Vote[]

  @@index([authorId])
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([status, createdAt]) // Composite index for optimized queries
}

model Instruction {
  id              String        @id @default(cuid())
  title           String
  slug            String        @unique
  description     String
  content         String        @db.Text
  filePattern     String?       // e.g., "*.tsx", "**/*.test.ts"
  language        String?       // e.g., "typescript", "python"
  framework       String?       // e.g., "react", "vue", "django"
  scope           String?       // "file", "project", "workspace"
  exampleBefore   String?       @db.Text
  exampleAfter    String?       @db.Text
  tags            String[]
  difficulty      Difficulty    @default(INTERMEDIATE)
  status          ContentStatus @default(PENDING)
  featured        Boolean       @default(false)
  downloads       Int           @default(0)
  views           Int           @default(0)
  authorId        String
  author          User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  votes           Vote[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([slug])
  @@index([status])
  @@index([language])
  @@index([framework])
  @@index([authorId])
  @@index([status, createdAt]) // Composite index for optimized queries
}

model Agent {
  id                  String        @id @default(cuid())
  title               String
  slug                String        @unique
  description         String
  content             String        @db.Text
  category            String?       // e.g., "Testing", "Security", "Frontend"
  mcpServers          String[]      // Required MCP server names
  languages           String[]      // Supported languages
  frameworks          String[]      // Supported frameworks
  vsCodeInstallUrl    String?       // VS Code install deep link
  vsCodeInsidersUrl   String?       // VS Code Insiders install link
  downloadUrl         String?       // Direct .agent.md download URL
  tags                String[]
  difficulty          Difficulty    @default(INTERMEDIATE)
  status              ContentStatus @default(PENDING)
  featured            Boolean       @default(false)
  downloads           Int           @default(0)
  views               Int           @default(0)
  authorId            String
  author              User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  votes               Vote[]
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([slug])
  @@index([category])
  @@index([status])
  @@index([authorId])
  @@index([status, createdAt]) // Composite index for optimized queries
}

model Favorite {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  targetId    String      // ID of the content (Prompt, Tool, etc)
  targetType  TargetType  // Allows favorite of Prompt, Tool, MCP, Instruction, Agent
  createdAt   DateTime    @default(now())
  @@unique([userId, targetType, targetId])
}

model Collection {
  id          String      @id @default(cuid())
  name        String
  description String?
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       CollectionItem[]
  isPublic    Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  @@index([userId])
}

model CollectionItem {
  id          String      @id @default(cuid())
  collectionId String
  collection  Collection  @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  targetId    String
  targetType  TargetType
  addedAt     DateTime    @default(now())
  @@unique([collectionId, targetType, targetId])
}

enum Role {
  USER
  ADMIN
}

enum ContentStatus {
  DRAFT
  PENDING
  APPROVED
  ARCHIVED
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum TargetType {
  PROMPT
  TOOL
  MCP
  INSTRUCTION
  AGENT
}
